{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe debug build active file",
      "command": "C:/mingw64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-ggdb", // For adding debug info in the build optimized for gdb
        "-pedantic-errors", // To strictly follow C++ compliance
        // "-Wall",
        // "-Weffc++",
        // "-Wextra",
        // "-Wconversion",
        // "-Wsign-conversion",
        // "-Werror", // For treating warnings as errors
        "-I${workspaceFolder}\\includes", // For setting includes directory path, and helping in finding header files
        "-std=c++20",
        "${fileDirname}\\**.cpp",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
